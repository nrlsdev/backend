{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["index.ts"]
}
