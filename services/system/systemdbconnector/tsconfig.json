{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
